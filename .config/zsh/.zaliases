#
# ~/.zaliases
#

# bin
export COLOR="--color=auto"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias mkdir="mkdir -pv"
alias grep="grep $COLOR"
alias diff="diff $COLOR"
alias ls="ls -hN $COLOR --group-directories-first"

# system
alias shutdown="sudo shutdown -h now"
alias reboot="sudo reboot"

# source
alias sz="source ~/.config/zsh/.zshrc"

# custom
alias v="nvim"
alias vi="nvim"
alias vim="nvim"
alias clima="curl -s wttr.in"
alias temp="watch sensors"
alias mpv="swallow mpv"
alias sxiv="swallow sxiv"
alias zathura="swallow zathura"
alias layout="setxkbmap -model latitude -layout br"
alias calc="noglob calculadora"
alias tetris="tetriscurses"
alias ld="lazydocker"
alias lg="lazygit"
alias todo="todo.sh -c"
alias lf="lfub"

# git
alias dots='/usr/bin/git --git-dir=/home/victor/.dotfiles/ --work-tree=/home/victor'

